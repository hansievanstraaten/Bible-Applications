<src:WindowBase xmlns:Specialized="clr-namespace:WPF.Tools.Specialized;assembly=WPF.Tools"  
                xmlns:TabControl="clr-namespace:WPF.Tools.TabControl;assembly=WPF.Tools"  
                x:Class="Bibles.MainWindow"
                xmlns:src="clr-namespace:WPF.Tools.BaseClasses;assembly=WPF.Tools"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:Bibles"
                mc:Ignorable="d"
                Title="Bibles" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.Column="0"></Menu>

        <Specialized:MessageLabel Grid.Row="0" Grid.Column="1" x:Name="uxMessageLable" Foreground="Red" />
        
        <TabControl:TabControlVertical Grid.Row="1" Grid.Column="0" x:Name="uxLeftTab" DockLocation="Left" />
        
        
        
        
    </Grid>
</src:WindowBase>
